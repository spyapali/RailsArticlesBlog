</head>

<div class="container">
<table class="table table-hover">
  <thead> 
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
  </tbody>
</table>

